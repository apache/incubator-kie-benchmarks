rule "notMatchesPostalCodeWithPrefix@RULE_NUMBER"
when 
	$address : Address(postCode not matches "@NUMBER1.*")
then
	modify ($address) { setPostCode("@NUMBER1") };
	list.add(drools.getRule().getName());
end
