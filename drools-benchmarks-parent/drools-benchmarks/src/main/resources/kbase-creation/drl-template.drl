rule "accountBalance@RULE_NUMBER"
when 
	$account : Account(balance < @NUMBER1 || > @NUMBER2)
then
    modify ($account) { setBalance(@NUMBER2) };
    list.add(drools.getRule().getName());
end
===============================================================================
rule "accountBalance2_@RULE_NUMBER"
when 
	$account : Account(balance >= @NUMBER1 && <= @NUMBER2)
then
	modify ($account) { setBalance(@NUMBER2) };
